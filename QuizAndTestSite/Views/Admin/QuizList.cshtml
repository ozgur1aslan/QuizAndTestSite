@{
}

@model IEnumerable<QuizModel>




<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h1 class="purpleText">Quiz List</h1>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Admin" asp-action="CreateQuiz" class="btn btn-primary" style="float: none; background-color: mediumpurple">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Quiz
            </a>
            <a asp-controller="Admin" asp-action="CreateCategory" class="btn btn-primary" style="float: none; background-color: mediumpurple">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Category
            </a>
            <a asp-controller="Admin" asp-action="Index" class="btn btn-secondary" style="width:150px">
                Back to Menu
            </a>
        </div>
    </div>
    <br /><br />

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th class="purpleText">
                    Name
                </th>
                <th class="purpleText">
                    Category
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="50%">
                        @obj.QuizName
                    </td>
                    <td width="30%">
                        @obj.Category
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Admin" asp-action="EditQuiz" asp-route-id="@obj.Id"
                           class="btn btn-primary mx-2" style="float: none; background-color: mediumpurple"> <i class="bi bi-pencil-square"></i>Edit</a>
                            <a asp-controller="Admin" asp-action="DeleteQuiz" asp-route-id="@obj.Id"
                           class="btn btn-primary mx-2" style="float: none; background-color: mediumpurple"> <i class="bi bi-pencil-square"></i>Delete</a>
                            <a asp-controller="Admin" asp-action="CreateQuestion" asp-route-id="@obj.Id"
                           class="btn btn-primary mx-2" style="float: none; background-color: mediumpurple"> <i class="bi bi-pencil-square"></i>Add Question</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>