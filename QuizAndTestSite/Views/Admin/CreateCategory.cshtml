@model CategoryModel

<div class="text-center container">
    <h1 class="purpleText">Create a Category!</h1>
    <form method="post" class="mx-auto mt-5 mb-5 px-5 pt-5 pb-5 rounded-5 alert-light col-4">

        @*<div asp-validation-summary="All"></div>*@

        <label asp-for="CategoryName" class="control-label">Type Category Name</label>
        <br />
        <input type="text" style="accent-color: mediumpurple" asp-for="CategoryName"
               placeholder="Type category name" />
        <br />
        <span asp-validation-for="CategoryName" class="text-danger"></span>

        <br />


        <button class="btn alert-primary mt-1 purpleButton whiteText" type="submit">Create Category</button>
        <a asp-controller="Admin" asp-action="QuizList" class="btn btn-secondary" style="width:150px">
            Back to Menu
        </a>
    </form>

</div>