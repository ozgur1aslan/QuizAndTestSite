@model QuizModel

<div class="text-center container">
    <h1 class="purpleText">Edit a Quiz</h1>
    <form method="post" class="mx-auto mt-5 mb-5 px-5 pt-5 pb-5 rounded-5 alert-light col-4">

        @*<div asp-validation-summary="All"></div>*@

        <input type="text" asp-for="QuizName"
               placeholder="Drink name" />
        <br />
        <span asp-validation-for="QuizName" class="text-danger"></span>

        <br />

        <div class="form-group">
            <label asp-for="Category" class="control-label">Select Quiz Category</label>
            <select asp-for="Category" class="form-control" asp-items="ViewBag.CategoryModelCategoryName"></select>
        </div>
        <br />
        <span asp-validation-for="Category" class="text-danger"></span>

        <br />

        <button class="btn alert-primary mt-1 purpleButton whiteText" type="submit">Update</button>
        <a asp-controller="Admin" asp-action="QuizList" class="btn btn-secondary" style="width:150px">
            Back to List
        </a>
    </form>

</div>


@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    }